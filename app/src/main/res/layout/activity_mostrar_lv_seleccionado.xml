<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="187dp"
        app:srcCompat="@drawable/no_image_available"
        android:id="@+id/imageView7"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.54"
        android:background="@drawable/border"
        android:scaleType="fitXY"/>

    <TextView
        android:text="Unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTituloRutaLvVerRutas"
        tools:textColor="@color/Blacky"
        android:textSize="20sp"
        tools:textStyle="bold"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Unknown"
        android:layout_width="233dp"
        android:layout_height="85dp"
        android:id="@+id/txtDescRutaLvVerRutas"
        android:textColor="@color/Blacky"
        android:gravity="fill_vertical|center"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloRutaLvVerRutas" />

    <TextView
        android:text="Dificultad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnormal"
        android:textColor="@color/Blacky"
        android:textSize="18sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="376dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView19"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center" />

    <TextView
        android:text="Kilometros:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textColor="@color/Blacky"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:layout_marginTop="376dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Elevacion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textColor="@color/Blacky"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView19"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_marginTop="376dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDificultadRutaLvVerRutas"
        app:layout_constraintTop_toBottomOf="@+id/txtnormal"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <TextView
        android:text="unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtElevacionRutaLvVerRutas"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:gravity="center"/>

    <TextView
        android:text="unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtKilometrosRutaLvVerRutas"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtDificultadRutaLvVerRutas"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtElevacionRutaLvVerRutas"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.52"
        android:gravity="center"/>

    <Button
        android:text="Ver en google maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerGlgMaps"
        android:backgroundTint="@color/AzulClaroJavea"
        android:textColor="@color/blanco"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>